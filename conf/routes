# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
POST    /account                    controllers.AccountController.createAccount
PUT     /account                    controllers.AccountController.updateAccount
DELETE  /account                    controllers.AccountController.deleteAccount
GET     /account                    controllers.AccountController.retrieveAccount
POST    /account/:id/order          controllers.OrderController.createOrder(id : String)
POST    /account/:id/creditCard     controllers.CreditCardController.createCreditCard(id : String)
POST    /account/:id/bankAccount    controllers.BankAccountController.createBankAccount(id : String)


POST    /customer                   controllers.CustomerController.createCustomer
PUT     /customer                   controllers.CustomerController.updateCustomer
DELETE  /customer                   controllers.CustomerController.updateCustomer
GET     /customer                   controllers.CustomerController.retrieveCustomer


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
